@model Pepe100.Models.loginyritys

<div class="modal" id="LoginRuutuYritys">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<h1 style="color:lightpink">NurseBid</h1>
			</div>
			<div class="modal-body">
				@using (Html.BeginForm("AuthorizeYritys", "Home", FormMethod.Post, new { id = "loginFormYritys" }))
				{
	@Html.AntiForgeryToken()
					<div class="form-horizontal">
						<h4 style="color:white">Kirjaudu sisään</h4>
						<hr />
						@Html.ValidationSummary(true, "", new { @class = "text-danger" })
						@Html.HiddenFor(model => model.LoginIDYritys)

						<div class="form-group">
							@Html.LabelFor(model => model.UserNameYritys, "Käyttäjätunnus", htmlAttributes: new { @class = "control-label col-md-2" })
							<div class="col-md-10">
								@Html.EditorFor(model => model.UserNameYritys, new { htmlAttributes = new { @class = "form-control" } })
								@Html.ValidationMessageFor(model => model.UserNameYritys, "", new { @class = "text-danger" })
							</div>
						</div>

						<div class="form-group">
							@Html.LabelFor(model => model.PasswordYritys, "Salasana", htmlAttributes: new { @class = "control-label col-md-2" })
							<div class="col-md-10">
								@Html.EditorFor(model => model.PasswordYritys, new { htmlAttributes = new { @class = "form-control" } })
								@Html.ValidationMessageFor(model => model.PasswordYritys, "", new { @class = "text-danger" })
							</div>
						</div>
						@*<div>
								<a href="@Url.Action("Index2", "Home")">Unohtuiko salasana?</a>
							</div>*@
						<label class="text-danger">
							@Html.DisplayFor(model => model.LoginErrorMessageYritys)
						</label>

					</div>}
			</div>
			<div class="modal-footer justify-content-between">
				<div>
					<a href="@Url.Action("Index", "Home")" class="btn btn-primary">Peruuta</a>
				</div>
				<div>
					<button type="submit" class="btn btn-outline-info" form="loginFormYritys">Kirjaudu</button>
				</div>
			</div>
		</div>
	</div>
</div>





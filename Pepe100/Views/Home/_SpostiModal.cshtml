@model Pepe100.Models.tyontekijat2


<div class="modal" id="SpostiSend">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 style="color:lightpink">NurseBid</h1>
            </div>
            <div class="modal-body">
                @using (Html.BeginForm("Email", "Home", FormMethod.Post, new { id = "emailForm" }))
                {
                    @Html.AntiForgeryToken()
                    <div class="form-horizontal">
                        <h4>Syötä sähköpostisi</h4>
                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <div class="form-group">
                            @Html.LabelFor(model => model.Email, "Sähköposti", htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <label class="text-danger">
                            @Html.DisplayFor(model => model.EmailMessage)
                        </label>

                    </div>}
            </div>
            <div class="modal-footer justify-content-between">
                <div>
                    <a href="@Url.Action("Index", "Home")" class="btn btn-primary">Poistu</a>
                </div>
                <div>
                    <button type="submit" class="btn btn-outline-info" form="emailForm">Lähetä tunnukset</button>
                </div>
            </div>
        </div>
    </div>
</div>





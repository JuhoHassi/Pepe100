						</div>
					</div>
					<div class="form-group">
						@Html.LabelFor(model => model.HenkiloID, "HenkiloID", htmlAttributes: new { @class = "control-label col-md-2" })
						<div class="col-md-10">
							@Html.EditorFor(model => model.HenkiloID, new { htmlAttributes = new { @class = "form-control" } })
							@Html.ValidationMessageFor(model => model.HenkiloID, "", new { @class = "text-danger" })
						</div>
					</div>
					<div class="form-group">
						@Html.LabelFor(model => model.VastaTarjousHinta, "VastaTarjousHinta", htmlAttributes: new { @class = "control-label col-md-2" })
						<div class="col-md-10">
							@Html.EditorFor(model => model.VastaTarjousHinta, new { htmlAttributes = new { @class = "form-control" } })
							@Html.ValidationMessageFor(model => model.VastaTarjousHinta, "", new { @class = "text-danger" })
						</div>
					</div>
					<div class="modal-footer justify-content-between">
						@*<div>
				<a href="@Url.Action("AvoimetVuorotTesti", "Tyontekijat2")" class="btn btn-primary">Peruuta</a>
			</div>*@
						<div>
							<button type="submit" class="btn btn-outline-info" form="hyvaksyForm">Hyväksy tarjous</button>
						</div>
					</div>
				</div>}
			</div>
		</div>
	</div>
</div>

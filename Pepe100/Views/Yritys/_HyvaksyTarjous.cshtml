					<h4 style="color:white">Hyväksy Tarjous</h4>
					<hr />
					@Html.ValidationSummary(true, "", new { @class = "text-danger" })
					@Html.HiddenFor(model => model.TyoID)


					<div class="form-group">
						@Html.LabelFor(model => model.TarjousHinta, "TarjousHinta", htmlAttributes: new { @class = "control-label col-md-2" })

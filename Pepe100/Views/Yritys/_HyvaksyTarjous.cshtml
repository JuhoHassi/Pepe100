@model Pepe100.Models.vastatarjoukset

<div class="modal" id="HyvaksyTarjousRuutu">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<h1 style="color:lightpink">NurseBid</h1>
			</div>
			<div class="modal-body">

				@using (Html.BeginForm("_HyvaksyTarjous", "Yritys", FormMethod.Post, new { id = "hyvaksyForm" }))

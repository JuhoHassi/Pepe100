@model Pepe100.Models.tehtavia
@*@model IEnumerable<Pepe10.Models.Tehtavia>*@


<div class="modal" id="TarjousRuutu">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<h1 style="color:lightpink">NurseBid</h1>
			</div>
			<div class="modal-body">

				@using (Html.BeginForm("_JataTarjous", "Tyontekijat2", FormMethod.Post, new { id = "vastatarjousForm" }))
				{
				@Html.AntiForgeryToken()
					<div class="form-horizontal">
						<h4 style="color:white">Jätä Tarjous</h4>
						<hr />
						@Html.ValidationSummary(true, "", new { @class = "text-danger" })
						@Html.HiddenFor(model => model.TyoID)


						<div class="form-group">
							@Html.LabelFor(model => model.TarjousHinta, "TarjousHinta", htmlAttributes: new { @class = "control-label col-md-2" })
							<div class="col-md-10">
								@Html.EditorFor(model => model.TarjousHinta, new { htmlAttributes = new { @class = "form-control" } })
								@Html.ValidationMessageFor(model => model.TarjousHinta, "", new { @class = "text-danger" })
							</div>
						</div>
						<div class="modal-footer justify-content-between">
							<div>
								<a href="@Url.Action("AvoimetVuorotTesti", "Tyontekijat2")" class="btn btn-primary">Peruuta</a>
							</div>
							<div>
								<button type="submit" class="btn btn-outline-info" form="vastatarjousForm">Jätä tarjous</button>
							</div>
						</div>
					</div>}
			</div>
		</div>
	</div>
</div>
